<% include ../partials/_header.ejs %>
  <body class="">
    <div class="page">
      <div class="page-main">
        <% include ../partials/_topbar.ejs %>
        <% include ../partials/_navbar.ejs %>
        <div class="my-3 my-md-5">
          <div class="container">

            <div class="col-lg-12">

                <% include ../partials/_messages.ejs %>
              <form class="card" action="/users/profile" method="POST">
                <div class="card-body">
                  <h3 class="card-title">Edit Profile</h3>
                  <div class="row">
                    <div class="col-md-4 col-sm-12">
                      <div class="form-group">
                        <label class="form-label">Username</label>
                        <input type="text" class="form-control" disabled="" placeholder="Username" value="<%= user.username %>">
                      </div>
                    </div>
         
                
                    <div class="col-md-4 col-sm-12">
                      <div class="form-group">
                        <label class="form-label">Role</label>
                        <input type="email" class="form-control" disabled="" placeholder="Role" value="<%= user.role %>" >
                      </div>
                    </div>

                    <div class="col-md-4 col-sm-12 ">
                      <div class="form-group">
                        <label class="form-label">Email address</label>
                        <input type="email" class="form-control" disabled="" placeholder="Email" value="<%= user.email %>" >
                      </div>
                    </div>
                    <div class="col-sm-6 col-md-6">
                      <div class="form-group">
                        <label class="form-label">First Name</label>
                        <input type="text" class="form-control" placeholder="Company" value="<%= user.firstname %>">
                      </div>
                    </div>
                    <div class="col-sm-6 col-md-6">
                      <div class="form-group">
                        <label class="form-label">Last Name</label>
                        <input type="text" class="form-control" placeholder="Last Name" value="<%= user.lastname %>">
                      </div>
                    </div>
               
    
                  </div>
                </div>
                <div class="card-footer text-right">
                  <button type="submit" class="btn btn-primary">Update Profile</button>
                </div>
              </form>
          

            </div>





          </div> 
        </div>
      </div>
      <% include ../partials/_footer.ejs %>
    </div>
  </body>
</html>